/* pages/waitRecord/waitRecord.wxss */
.main > text{
  font-size:30rpx;
  font-family: PingFang-SC-Bold;
  display:block;
  margin:0 0 20rpx 20rpx;
}

/* 表格 */
table {
  border: 0px solid darkgray;
}
.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 80rpx;
  align-items: center;
  font-size:30rpx;
  font-family: PingFang-SC-Bold;
}
.td {
  justify-content: center;
  text-align: center;
}
.td:first-child{
  width: 20%;
}
.td:nth-child(2){
  width: 50%;
}
.td:last-child{
  width: 30%;
}
.bg-w{
  background: rgb(55, 170, 74);
}
.bg-g{
  background: #E6F3F9;
}
.th {
  height: 100%;
  justify-content: center;
  color: #fff;
  display: flex;
  align-items: center;
}
.th:first-child{
  width: 20%;
}
.th:nth-child(2){
  width: 50%;
}
.th:last-child{
  width: 30%;
}